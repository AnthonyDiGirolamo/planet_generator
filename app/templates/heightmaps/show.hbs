<div class='header'>
  <h2>{{model.name}}</h2>
</div>

<div class='content'>

  <div class='pure-g'>
    <div class='pure-u-1 pure-u-md-2-5'>
      <form action='' class='pure-form pure-form-stacked' method='post'>
        <fieldset>
          <div class='pure-control-group'>
            <label for='name'>Name</label>
            {{input id='name' type="text" value=model.name}}
          </div>
          <div class='pure-control-group'>
            <label for='seed'>Seed</label>
            {{input id='seed' type="text" value=model.seed}}
          </div>
          <div class='pure-control-group'>
            <label for='width'>width</label>
            {{input id='width' type="text" value=model.width}}
          </div>
          <div class='pure-control-group'>
            <label for='height'>height</label>
            {{input id='height' type="text" value=model.height}}
          </div>
          <div class='pure-control-group'>
            <label for='colormap'>Color Map</label>
            {{#link-to 'colormaps.show' model.colormap}}
            {{model.colormap.name}}
            {{/link-to}}
            {{view 'select' id=colormap
                            contentBinding="all_colormaps"
                            optionValuePath="content.id"
                            optionLabelPath="content.name"
                            selection=selectedColormap
                            prompt="Change Color Map"}}
          </div>

        </fieldset>
      </form>
    </div>
    <div class='pure-u-1 pure-u-md-3-5'>
      {{#if model.colormap.isFulfilled}}
      <div id="canvas-container">
        {{canvas-spheremap width=model.width
                           height=model.height
                           seed=model.seed
                           colormap=model.colormap.color_json}}
      </div>
      {{/if}}
    </div>
  </div>

</div>
